{
  "version": 3,
  "cmakeMinimumRequired": {
	"major": 3,
	"minor": 25
  },
	"configurePresets": [
		{
			"name": "debug",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_EXPORT_COMPILE_COMMANDS": true
			}
		},
		{
			"name": "release",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_EXPORT_COMPILE_COMMANDS": true
			}
		}
	]
}
